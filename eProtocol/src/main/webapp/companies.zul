<?taglib uri="http://www.zkoss.org/dsp/web/core" prefix="c"?>
<?page title="${c:l('companiesPage.title')}" contentType="text/html;charset=UTF-8"?>
<?link rel="icon" type="image/x-icon" href="img/eprotocol.ico"?>
<zk>
	<include id="ph" sclass="header" src="header.zul" />
	<window id="win" title="${c:l('companiesPage.title')}" width="100%"
		viewModel="@id('vm') @init('gr.scriptum.eprotocol.vm.CompaniesVM')">

		<listbox id="entitiesLstbx" rows="@load(vm.pageSize)"
			model="@load(vm.entities)" selectedItem="@bind(vm.selected)"
			onSelect="@command('selectEntity')">
			<listhead>
				<listheader label="${c:l('company.id')}" sort="auto"
					value="id" onSort="@command('sort')" sortDirection="ascending" hflex="1"/>
				<listheader label="${c:l('company.code')}" sort="auto"
					value="code" onSort="@command('sort')" hflex="1"/>
				<listheader label="${c:l('company.name')}" sort="auto"
					value="name" onSort="@command('sort')" hflex="4"/>
				<listheader label="${c:l('companyType.name')}" hflex="3"/>
				<listheader label="${c:l('company.isGoverment')}"
					sort="auto" value="isGoverment" onSort="@command('sort')" hflex="2"/>
			</listhead>
			<template name="model">
				<listitem>
					<listcell label="@load(each.id)" />
					<listcell label="@load(each.code)" />
					<listcell label="@load(each.name)" />
					<listcell label="@load(each.companyType.name)" />
					<listcell label="@load(each.isGoverment) @converter('gr.scriptum.eprotocol.converter.LabelStringConverter')"/>
				</listitem>
			</template>
		</listbox>
		<paging id="pgng" pageSize="@load(vm.pageSize)"
			totalSize="@load(vm.totalSize)" activePage="@bind(vm.activePage)"
			onPaging="@command('page')" />


		<grid>
			<columns>
				<column width="30%" />
			</columns>
			<rows>
				<row>
					${c:l('company.name')}
					<textbox width="300px"
						value="@bind(vm.entity.name)" />
				</row>
				<row>
					${c:l('company.code')}
					<textbox width="300px"
						value="@bind(vm.entity.code)" />
				</row>
				<row>
					<label value="${c:l('functions')}" />
					<hbox>
						<button id="searchBtn" label="${c:l('search')}"
							onClick="@command('searchEntities')" />
						<button id="clearBtn" label="${c:l('clear')}"
							onClick="@command('clearSearch')" />
						<button id="newBtn" label="${c:l('new')}"
							onClick="@command('addNewEntity')"
							disabled="${sec:isNoneGranted('ADD_COMPANY')}" />
						<!--
							<button id="uploadBtn" label="${c:l('importFile')}" />
							<button id="downloadBtn"
							label="${c:l('exportFile')}" />
						-->
					</hbox>
				</row>
			</rows>
		</grid>

	</window>
	<include id="footer" sclass="footer" src="footer.zul" />
</zk>